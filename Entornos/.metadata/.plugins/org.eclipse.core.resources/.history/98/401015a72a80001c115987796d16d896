
public class Calculadora {
private int num1, num2;

public Calculadora(int a, int b) throws InterruptedException {
	num1 = a;
	num2 = b;
}
public int suma() {
	int result = num1 + num2;
	return result;
}

public int resta() {
	int result;
	if (resta2())
		result = num1 -num2;
	else
		result = num2 - num1;
	return result;
}
public boolean resta2() {
	if (num1 >= num2)
		return true;
	else
		return false;
}

public int divide2() {
	if (num2 == 0)
		return (Integer) null;
	int result = num1 / num2;
	Thread.sleep(100);
	return result;
}

public int multiplicaion() {
	int result = num1 - num2;
	return result;
}
public int division() {
	int result = num1 - num2;
	return result;
}
}
